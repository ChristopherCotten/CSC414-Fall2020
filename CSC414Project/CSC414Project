void menuChoice5()
{
    int int1 = 0;

    cout << "5 - Odd or Even" << endl;
    cout << "Enter a number" << endl;
    cout << "Number: ";
    cin >> int1;

    if (int1 % 2 == 0)
    {
        cout << int1 << " is even";
    }
    else
    {
        cout << int1 << " is odd";
    }

    cout << endl << endl;
}

void menuChoice6()
{
    int int1 = 0;

    cout << "6 - Positive or Negative" << endl;
    cout << "Enter a number" << endl;
    cout << "Number: ";
    cin >> int1;

    if (int1 > 0)
    {
        cout << int1 << " is Postive";
    }
    else if (int1 < 0)
    {
        cout << int1 << " is Negative";
    }
    else
    {
        cout << int1 << " is Zero";
    }

    cout << endl << endl;
}

void menuChoice7()
{
    int int1 = 0;
    int int2 = 0;
    int i = 0;
    int flag = 0;

    cout << "7 - Prime" << endl;
    cout << "Enter a positive number: ";
    cin >> int1;

    int2 = int1 / 2;

    for (i = 2; i < int2; i++)
    {
        if (int1 % i == 0)
        {
            cout << int1 << " is not a Prime number";
            cout << endl << endl;
            flag = 1;
            break;
        }
    }

    if (flag == 0)
    {
        cout << int1 << " is Prime";
        cout << endl << endl;
    }
}

void menuChoice8()
{
    int int1 = 0;

    cout << "8 - Factors" << endl;
    cout << "Enter a positive number: ";
    cin >> int1;

    cout << "Factors of " << int1 << " are: ";
    cout << endl;
    for (int i = 1; i <= int1; ++i)
    {
        if (int1 % i == 0)
            cout << i << ", ";
            
    }

    cout << endl << endl;
}

void menuChoice9()
{
    int int1 = 0;
    int int2 = 1;

    cout << "9 - Factorial" << endl;
    cout << "Enter a number: ";
    cin >> int1;

    cout << "The Factorial of " << int1 << " is: ";

    for (int i = 1; i <= int1; i++)
    {
        int2 = int2 * i;
    }

    cout << int2;
    cout << endl << endl;
}

